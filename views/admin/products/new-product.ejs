<%- include('../../shared/includes/head', {pageTitle: 'Add new product'}) %>
<link rel="stylesheet" href="/styles/forms.css">
</head>
<body>
  <%- include('../../shared/includes/header') %>
  <main>
    <h1>Product Administration</h1>
    <form action="/admin/products" method="POST" enctype="multipart/form-data">
      <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>"> <!-- this shouldn't be added because encType to multipart/form-data doesn't supports this input here and so this should fail!!! instead here i can simply add the _csrf=<%= locals.csrfToken %> as a query paramter -->
      <div>
        <label for="title">Title</label>
        <input type="text" id="title" name="title" required>
      </div>
      <div>
        <label for="image">Image</label>
        <input type="file" id="image" name="image" accept="image/png, image/jpg, image/webp" required>
      </div>
      <div>
        <label for="summary">Summary</label>
        <input type="text" id="summary" name="summary" maxlength="250" required>
      </div>
      <div>
        <label for="price">Price</label>
        <input type="number" id="price" name="price" min="0.01" step="0.01" required>
      </div>
      <div>
        <label for="description">Description</label>
        <textarea id="description" name="description" rows="7" required></textarea>
      </div>
      <div>
        <button type="reset" class="btn btn-alt">Reset</button>
        <button type="submit" class="btn">Save</button>
      </div>
    </form>
  </main>
</body>
</html>