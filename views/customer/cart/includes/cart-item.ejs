<article class="cart-item">
  <div class="cart-item-info">
    <h2><%= item.product.title %></h2>
    <p>
      ₹<span class="cart-item-total-price"><%= item.totalPrice.toFixed(2) %></span>
      <span class="cart-product-price"
        >(₹<%= item.product.price.toFixed(2) %>)</span
      >
    </p>
  </div>

  <form class="cart-item-management" data-id="<%= item.product.id %>" data-csrf-token="<%= locals.csrfToken %>">
    <input type="number" value="<%= item.quantity %>" required />
    <button class="btn btn-alt update-btn">Update</button>
  </form>
</article>
