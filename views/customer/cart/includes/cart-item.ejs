<article class="cart-item">
  <div class="cart-item-info">
    <h2><%= item.product.title %></h2>
    <p>
      ₹<%= item.totalPrice.toFixed(2) %>
      <span class="cart-product-price"
        >(₹<%= item.product.price.toFixed(2) %>)</span
      >
    </p>
  </div>

  <div class="cart-item-management">
    <input type="number" value="<%= item.quantity %>" class="totalQuantity" data-id="<%= item.product.id %>" data-csrf-token="<%= locals.csrfToken %>" required />
    <button class="btn btn-alt update-btn" disabled>Update</button>
  </div>
</article>
